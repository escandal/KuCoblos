    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12490732590712"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="103dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Data Pribadi"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:id="@+id/ic_email"
                android:src="@drawable/ic_email"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ic_email"
                android:text="raditadit826@gmail.com"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp"
               android:layout_marginTop="375dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/ic_phone"
                android:src="@drawable/ic_handphone"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_below="@+id/ic_email"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@+id/no_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="082160377792"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ic_phone"
                android:layout_marginTop="475dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By "
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_below="@+id/no_hp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="100dp"/>
            <Button
                android:id="@+id/about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="ESCANDAL TEAM "
                android:textColor="@color/hijauterang"
                android:textSize="15dp"
                android:layout_below="@+id/no_hp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="87dp"
                android:textStyle="bold|italic"/>
        </RelativeLayout>

</FrameLayout>