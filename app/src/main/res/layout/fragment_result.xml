<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ResultFragment"
    android:background="@color/navyBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"/>
        <TextView
            android:id="@+id/headerHasilSuara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Suara"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/subHeaderSuara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerHasilSuara"
            android:text="Calon Presiden"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <HorizontalScrollView
            android:id="@+id/horiPresiden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subHeaderSuara">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/suaraPaslon1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:background="@drawable/paslon1"/>
                <TextView
                    android:id="@+id/namaPaslon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makmur - Sule \n\nSupport By: \nBeer Bintang \nMangkokku \nTeh Cap Badak"
                    android:layout_toRightOf="@id/suaraPaslon1"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/totalSuara1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/namaPaslon1"
                    android:textSize="20dp"
                    android:text="Total Suara"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/persenSuara1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/namaPaslon1"
                    android:layout_below="@id/totalSuara1"/>
                <ImageView
                    android:id="@+id/suaraPaslon2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:background="@drawable/paslon2"
                    android:layout_toRightOf="@+id/totalSuara1"
                    android:layout_marginLeft="65dp"/>
                <TextView
                    android:id="@+id/namaPaslon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sule - Andre \n\nSupport By: \nBeer Bintang \nMangkokku \nTeh Cap Badak"
                    android:layout_toRightOf="@id/suaraPaslon2"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/totalSuara2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/namaPaslon2"
                    android:textSize="20dp"
