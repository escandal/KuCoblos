                    android:text=""
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/namaPaslon3"
                    android:layout_below="@id/totalSuara3"/>
                <ImageView
                    android:id="@+id/suaraPaslon4"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:background="@drawable/paslon4"
                    android:layout_toRightOf="@+id/persenSuara3"
                    android:layout_marginLeft="150dp"/>
                <TextView
                    android:id="@+id/namaPaslon4"
